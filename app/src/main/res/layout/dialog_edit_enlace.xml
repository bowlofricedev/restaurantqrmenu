<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/white"
        android:elevation="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ln_enlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_baseline_camera_alt_24_white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/txtEditEnlaceTitle"
                        android:text="Editar Enlace"
                        android:textColor="@android:color/white"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:id="@+id/emptySpace"
                        android:text=""
                        android:textColor="@android:color/white"

                        />

                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_share_24"
                        android:background="@color/colorPrimary"
                        android:layout_gravity="right"
                        android:layout_marginRight="3dp"
                        android:id="@+id/btnShareEdit"
                        />

                 </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <ImageButton
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_baseline_info_24"
                        android:tint="@color/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:paddingLeft="10dp"
                        android:text="Nombre"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold" />


                </LinearLayout>



                <LinearLayout
                    android:id="@+id/ln_TituloNuevoEnlace"
                    android:paddingStart="40dp"
                    android:paddingEnd="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtNombreEnlaceEdit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:hint="Nombre del enlace..."
                        android:textColor="#292727"
                        android:textSize="15sp" />

                    <ImageButton

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_baseline_edit_24"
                        android:tint="#7A7A7A" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <ImageButton
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_baseline_link_24"
                        android:tint="@color/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:paddingLeft="10dp"
                        android:text="URL"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lnDescripcionNuevoEnlace"
                    android:paddingStart="40dp"
                    android:paddingEnd="15dp"

                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtUrlEnlaceEdit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:hint="URL del enlace..."

                        android:textColor="#292727"
                        android:textSize="15sp" />

                    <ImageButton
                        android:id="@+id/copyUrl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_baseline_file_copy_24"
                        android:visibility="visible"
                        android:tint="#7A7A7A" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <ImageButton
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_baseline_category_24"
                        android:tint="@color/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:paddingLeft="10dp"
                        android:text="Tipo"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ln_UrlNuevoEnlace"
                    android:paddingStart="40dp"
                    android:paddingEnd="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtTipoUrlEdit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:hint="Tipo de link"

                        android:textColor="#292727"
                        android:textSize="15sp" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_baseline_edit_24"
                        android:visibility="invisible"

                        android:tint="#7A7A7A" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <ImageButton
                        android:id="@+id/btnSaveEnlace"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="30dp"
                        android:layout_weight="50"
                        android:background="#4CAF50"
                        android:text="Guardar"
                        android:tint="@color/colorBlanco"
                        android:src="@drawable/ic_baseline_save_24"
                        android:textColor="@color/colorBlanco" />

                    <ImageButton
                        android:id="@+id/btnCreateCancelEnlace"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/colorBlanco"
                        android:layout_marginTop="30dp"
                        android:text="Cancelar"
                        android:layout_weight="50"
                        android:src="@drawable/ic_baseline_cancel_24"
                        android:tint="@color/colorBlanco"
                        android:background="#FFFFC107"
                        />
                </LinearLayout>

                <ImageButton

                    android:id="@+id/btnDeleteEnlace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlanco"
                    android:text="Cancelar"
                    android:layout_weight="50"
                    android:background="#C83333"
                    android:src="@drawable/ic_baseline_delete_24"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"

                    android:tint="@color/colorBlanco"
                    />

            </LinearLayout>



        </RelativeLayout>

    </LinearLayout>
</layout>